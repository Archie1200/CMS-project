<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/upload.css">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
  
</head>
<body>
    <%- include('../partials/header')  %>
    <%- include('../partials/admin-side-navbar') %>

    <div class="admin_content">
        <%- include("../partials/flash")  %> 

        <form id="uploadForm" action="/admin/upload" method="POST" enctype="multipart/form-data" onsubmit="return checkform()">
           <div class="box">
            <div class="box1">
                <label for="image-upload">Upload image</label>
                <%- include('../partials/drag-drop') %>
                <div class="error" id="img-error"></div>
                <!-- <button type="button" class="btn btn-primary btn-sm " id="imageButton">Upload Images</button> -->
            </div>
            <div class="box2">
                <label for="video-upload">Upload Video</label>
                <%- include('../partials/drag-drop') %>
                <div class="error" id="vid-error"></div>
                <!-- <button  type="button" class="btn btn-success btn-sm" id="videoButton">Upload Videos</button> -->
            </div>
           </div>
        
           <label for="title"><h3>Title</h3></label><br>
            <input type="text" id="titleInput" name="title" placeholder="Title of the blog">
            <div id="title-error" class="error"></div>

            <label for="desc">Description</label><br>
            <input type="text" name="desc" id="desc" placeholder="Add description for the blog" style="width: 70%; margin-bottom: 10px;">


           <div id="bigContainer">
            <div class="container">
                <h2 class="contentNo">Content Box 1</h2>
                <label for="headingInput"><h3>Heading</h3></label>
                <input type="text" class="headingInput" name="headingInput">
                <label for="paragraphInput"><h3>Paragraph</h3></label>
                <textarea class="paragraphInput" rows="4" name="paragraphInput"></textarea>
                <button type="button" class="deleteBox">Delete</button>
              </div>
           </div>
           <div id="errorBox"></div>
          <button type="button" id="contentButton">Add Content</button>
          <button type="submit">Upload Blog</button>
        </form>
    </div>
    <footer style="height: 20px;"></footer>

<script>
    const profile_button = document.querySelector("#upload_link");
    profile_button.classList.add("active");
</script>
<script src="/js/uploadPage.js"></script>
<script src="/js/drag-drop.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>