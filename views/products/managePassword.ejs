            <input type="checkbox" onclick="myFunction(2)"> Show Password<br><br>
            <label for="newPassword"><h3>Retype new Password</h3></label><br>
            <input type="password" name="newPassword" id="3" placeholder="New Password"><br>
            <input type="checkbox" onclick="myFunction(3)"> Show Password<br><br>
        </form>
    </div>

